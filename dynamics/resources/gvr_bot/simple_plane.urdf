<?xml version="1.0" ?>
<robot name="simple_plane">
  
  <link name="world">
  </link>
  
  <link name="base_link">
      <contact>
        <!-- <lateral_friction value="0.3"/> -->
        <rolling_friction value="0.001"/>
        <!-- <anisotropic_friction value="0.8 2 0.1"/> -->
        <contact_cfm value="0.1"/>
        <contact_erp value="1.0"/>
       </contact>
        <visual> 
            <geometry> 
                <box size="1000 1000 0.01"/>
                <origin rpy="0 0 0" xyz="-20 -20 -0.01"/>
            </geometry>
            <material name="grey"/>
        </visual>
        <collision> 
             <geometry> 
                <box size="1000 1000 0.01"/>
                <origin rpy="0 0 0" xyz="-20 -20 -0.01"/>
            </geometry>
        </collision> 
        <inertial> 
            <mass value="0"/>
            <inertia ixx="0" ixy="0" ixz="0" iyy="0" iyz="0" izz="0"/>
        </inertial> 
    </link> 
  
  <joint name="plane_to_world" type="fixed">
    <parent link="world"/>
    <child link="base_link"/>
    <origin xyz="0 0 0" rpy="0 0 0"/>
  </joint>

</robot>
